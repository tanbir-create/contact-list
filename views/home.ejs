<html>
    <head>

        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/51657c7de3.js" crossorigin="anonymous"></script>


    </head>

    <body>
        
        <h1 id="page-heading"><i class="fas fa-id-card"></i> Contact List</h1>

        <div id="contacts-container">
            <div >

                <ul>
                    <% for(let i of contact_list) { %>
                    
                        <li class="contact">
                            <div class="details">
                                <i class="fas fa-user-circle"></i>
                                <p><%= i.name %></p>
                                <p><%= i.phone %></p>
                            </div>

                            <div id="delete-container">
                                <div class="delete-button">
                                    <a href="/delete-contact/?id=<%= i._id %>"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </div>
                        </li>
                        
                        
                    
                    <%} %>
                </ul>
            </div>
    
            <form action="/create-contact" method="POST">
                
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="number" name="phone" placeholder="Enter Phone No." required>
                <button type="submit">Add</button>
            </form>
            <script type="text/javascript" src="/js/home.js"></script>
        </div>
    </body>


</html>